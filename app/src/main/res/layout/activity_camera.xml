<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context=".CameraActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--タイトルバー-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/titlebar_height"
                android:background="@color/secondary"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--タイトルバーの文字-->
                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/titlebar_height"
                        android:gravity="center"
                        android:text="@string/title_camera_activity"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/titlebar_font_size" />

                    <!--戻る矢印-->
                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:padding="6dp"
                        android:src="@drawable/arrows" />

                </FrameLayout>

            </LinearLayout>

            <!-- メインコンテンツ -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <!-- 1STEP -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/shape_rounded_corners"
                            android:text="STEP1"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/noimage" />


                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="16dp"
                                android:paddingRight="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:text="顔写真の撮影"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NEXTボタンをクリックし、今の感情を表情にだし。撮影してください。"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- 2STEP -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/shape_rounded_corners"
                            android:text="STEP2"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/noimage" />


                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="16dp"
                                android:paddingRight="8dp">

                                <TextView
                                    android:id="@+id/step2_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:text="感情の推論"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/step2_message"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="AIを活用し、撮影画像から感情を取得します。"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <!-- 1STEP -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="32dp">

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/shape_rounded_corners"
                            android:text="STEP3"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/noimage" />


                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="16dp"
                                android:paddingRight="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:text="楽曲の提案"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="取得した画像から、最適な楽曲を提案します。"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingBottom="@dimen/padding">

                <!--カメラを起動するボタン-->
                <Button
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/shape_rounded_corners"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_text_size" />

            </LinearLayout>


        </LinearLayout>

        <!-- インジケータ -->

        <LinearLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/overlay"
            android:gravity="center"
            android:visibility="invisible">

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                style="@android:style/Widget.ProgressBar"/>


        </LinearLayout>

    </FrameLayout>


</LinearLayout>